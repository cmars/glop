// This agent will ping-pong back and forth internally with its variables.
// Variables are manipulated by the 'set' action keyword.

when (message init) {
  set ping true;
}

when (ping == true) {
  script #!/bin/bash
echo ping
!#
  set ping false;
  set pong true;
}

when (pong == true) {
  script #!/bin/bash
echo pong
!#
  set ping true;
  set pong false;
}
