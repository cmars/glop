when (message intro from ponger as pinger) #!/bin/bash
set -e
glop msg reply intro ping
!#

when (message intro from pinger as ponger) #!/bin/bash
set -e
glop msg reply intro pong
!#

when (message ping from pinger as ponger) #!/bin/bash
set -e
echo "pong"
glop msg reply pong ping
!#

when (message pong from ponger as pinger) #!/bin/bash
set -e
echo "pong"
glop msg reply pong ping
!#
